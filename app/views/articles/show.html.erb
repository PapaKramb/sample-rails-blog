<div class="container">
	<div class="row">
		<h1><%= @articles.title %></h1>
		<p>
			<%= @articles.text %>
		</p>

		<%= link_to 'Edit', edit_article_path(@articles) %> |
		<%= link_to 'Delete', article_path(@articles), method: :delete %>

		<h2>Comments</h2>

		<% @articles.comments.each do |comment| %>
			<p>
			<i><%= comment.author %> Said:</i><br/>
			<%= comment.body %>
			</p>
		<% end %>

		<h2>Add comment</h2>

		<p>
		<%= form_for ([@articles, @articles.comments.build]) do |f| %>
			<p>
				<%= f.label :author %> </br>
				<%= f.text_field :author %>
			</p>

			<p>
				<%= f.label :body %> </br>
				<%= f.text_area :body %>
			</p>

			<p>
				<%= f.submit %>
			</p>
		<% end %>
		</p>
	</div>
</div>
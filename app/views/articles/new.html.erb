<h1><%= t('articles.new_articles') %></h1>

<%= form_for :article, url: articles_path, :class => "form-group" do |f| %>
	<p>
		<%= f.label :title %> </br>
		<%= f.text_field(:title, {:class => "form-control"}) %>
	</p>

	<p>
		<%= f.label :text %> </br>
		<%= f.text_area(:text, {:class => "form-control"}) %>
	</p>

	<p>
		<%= f.submit({:class => "btn btn-primary"}) %>
	</p>
<% end %>